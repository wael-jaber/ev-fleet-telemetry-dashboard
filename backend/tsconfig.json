{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "../",
    "outDir": "./dist",
    "baseUrl": "../",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["src/**/*.ts", "../shared/**/*"],
  "exclude": ["node_modules", "**/dist/**/*"]
}
